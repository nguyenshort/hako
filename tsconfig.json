{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@plugins/*": [
        "./src/plugins/*"
      ],
      "@composables/*": [
        "./src/composables/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "#types/*": [
        "./src/types/*"
      ]
    }
  },
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
